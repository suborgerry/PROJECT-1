<div class="row text-light">
    <div class="col-lg-6 order-1">
      <div class="page-width">
        <div class="membership__wrapper">
          <h5 class="mb-0.5 mb-md-1 text-light text-md-1.125">{{ section.settings.subheading }}</h5>
          <h2 class="mb-1 mb-md-2.5 d-flex align-items-start text-light {{ heading_class }}">
              <span class="icon--triangle mr-0.5 mr-md-1 mt-0.5 mt-md-1"></span>
              <span class="pr-md-1">{{- section.settings.heading -}}</span>
            </h2>
          <div class="text-md-1.125 text-1 mb-1.5 mb-md-2.5">
              {{ section.settings.content }}
          </div>
          <div class="membership__content text-lg-center text-left">
              {% for block in section.blocks %}
              <div class="membership_item d-flex d-lg-block justify-content-between align-items-center">
                  <div>                  
                    <h5 class="mb-0.5 mb-md-1 text-md-1.25 text-1.125 text-light">{{ block.settings.title }}</h5>
                    <p class="text-0.875">{{ block.settings.description }}</p>
                    <div class="bg-light membership_line w-100 d-none d-lg-block mt-1 mb-1"></div>
                  </div>
                  <h3 class="mt-1 text-light">{{ block.settings.price }}</h3>
              </div>
              {% endfor %}
          </div>
      </div>
      </div>
    </div>
    <div class="col-lg-6 order-0">
      <div class="membership__image">
        {%- render 'image' with section.settings.image, is_media: false, class: 'd-block w-100 fit-cover' -%}
      </div>
    </div>
</div>
  
{% schema %}
  {
    "name": "Membership",
    "class": "membership bg-blue overflow-hidden",
     "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"     
      }
    ],
    "blocks": [
      {
        "name": "Column",
        "type": "text",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Per Week"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Lorem ipsum det"
          },
          {
            "type": "text",
            "id": "price",
            "label": "Price",
            "default": "$35"
          }
        ]
      }
    ],
    "presets": [
       {
           "category": "Text and image",
           "name":"Membership"
       }
    ]
  }
{% endschema %}